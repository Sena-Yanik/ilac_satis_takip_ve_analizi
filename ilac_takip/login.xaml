<Window x:Class="ilac_takip.login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ilac_takip"
        mc:Ignorable="d"
        Title="Giris" Height="450" Width="800" Background="DarkBlue">
    <Grid>
        <Image Source="/images/indir.jpeg" HorizontalAlignment="Center" Height="95" Margin="0,32,0,0" VerticalAlignment="Top" Width="132"/>
        <Label Content="Login" HorizontalAlignment="Center" Margin="0,125,0,0" VerticalAlignment="Top" Height="50" Width="84" Foreground="White" FontSize="30"/>
        <Label Content="kullanıcı adı:" HorizontalAlignment="Left" Margin="177,175,0,0" VerticalAlignment="Top" Foreground="White" FontSize="16" Height="31" Width="96"/>
        <Label Content="şifre:" HorizontalAlignment="Left" Margin="204,237,0,0" VerticalAlignment="Top" Foreground="White" FontSize="16" RenderTransformOrigin="0.494,0.704" Height="31" Width="43"/>

        <PasswordBox x:Name="pwdSifre" HorizontalAlignment="Left" Margin="297,244,0,0" VerticalAlignment="Top" Width="169" Height="18"/>
        <Button Content="Giriş" HorizontalAlignment="Center" Margin="0,306,0,0" VerticalAlignment="Top" Click="Button_Click" Width="84" Height="37"/>
        <TextBox x:Name="txtKullaniciAdi" HorizontalAlignment="Left" Margin="297,188,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="181"/>


    </Grid>
</Window>
